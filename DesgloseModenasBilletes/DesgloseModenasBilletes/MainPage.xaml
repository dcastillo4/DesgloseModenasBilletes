<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DesgloseModenasBilletes.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Parcial No. 1" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
      
        <Entry x:Name="cantidad"
               Placeholder="Ingrese una cantidad."
               />
        <Button BackgroundColor="#2196F3" Padding="24" CornerRadius="0"
            x:Name="desglosar"
                Text="Desglose"
                Clicked="desglosar_Clicked"
                />
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <CollectionView x:Name="collectionview">
                
            </CollectionView>
        </Frame>
    </StackLayout>

</ContentPage>
